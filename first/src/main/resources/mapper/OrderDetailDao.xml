<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.extra.first.dao.OrderDetailDao">

    <insert id="insertOrder" parameterType="com.extra.first.pojo.OrderDetail">
        insert into
        t_order_detail(name,sex,mobile,province,city,agentName,agentCode,carType,carTypeCode,mediaName,terminal,create_time,subject,is_activity,mediaUrl)
        values(#{order.name},#{order.sex},#{order.mobile},#{order.province},#{order.city},#{order.agentName},#{order.agentCode},#{order.carType},#{order.carTypeCode},#{order.mediaName},#{order.terminal},now(),#{order.subject},#{order.isActivity},#{order.mediaUrl});
    </insert>

    <select id="listOrderDetails" parameterType="com.extra.first.model.OrderDetailQueryBean" resultType="com.extra.first.pojo.OrderDetail">
        select
            id, name,sex, mobile,province,city,agentName,agentCode,carType,carTypeCode,mediaName,mediaUrl,terminal,subject,date_format(create_time,'%Y-%m-%d %T') createTime
        from t_order_detail
        <include refid="ORDER_LIST_WHERE" ></include>
        order by create_time desc
        limit #{offset},#{limit}
    </select>

    <select id="countOrderDetails" parameterType="com.extra.first.model.OrderDetailQueryBean"  resultType="java.util.Map">
        select
        COUNT(*) totalCount
        from t_order_detail
        <include refid="ORDER_LIST_WHERE" ></include>
    </select>

    <sql id="ORDER_LIST_WHERE">
        <where>
            <if test="detail.startDate != null ">
                create_time >= #{detail.startDate}
            </if>
            <if test="detail.endDate != null ">
                and create_time &lt;= #{detail.endDate}
            </if>
            <if test="detail.subject !=null">
                and subject=#{detail.subject}
            </if>
            <if test="detail.isActivity">
                and is_activity=1
            </if>
            <if test="!detail.isActivity">
                and is_activity=0
            </if>
        </where>
    </sql>
</mapper>