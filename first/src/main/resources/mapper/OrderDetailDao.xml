<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.extra.first.dao.OrderDetailDao">

    <insert id="insertOrder" parameterType="com.extra.first.pojo.OrderDetail">
        insert into
        t_order_detail(name,sex,mobile,province,city,agentName,agentCode,carType,carTypeCode,mediaName,terminal,create_time,subject,is_activity,mediaUrl)
        values(#{order.name},#{order.sex},#{order.mobile},#{order.province},#{order.city},#{order.agentName},#{order.agentCode},#{order.carType},#{order.carTypeCode},#{order.mediaName},#{order.terminal},now(),#{order.subject},#{order.isActivity},#{order.mediaUrl});
    </insert>

    <select id="listOrderDetails" resultType="com.extra.first.pojo.OrderDetail">
        select
            id, name,sex, mobile,province,city,agentName,agentCode,carType,carTypeCode,mediaName,mediaUrl,terminal,subject,date_format(create_time,'%Y-%m-%d %T') createTime
        from t_order_detail
        <where>
            <if test="detail.createTime != null ">
                datediff(create_time,#{detail.createTime}) = 0
            </if>
            <if test="detail.subject !=null">
                and subject=#{detail.subject}
            </if>
            <if test="detail.isActivity==1">
                and is_activity=1
            </if>
            <if test="detail.isActivity==0">
                and is_activity=0
            </if>
        </where>
        order by create_time desc
        limit #{offset},#{limit}
    </select>

    <select id="countOrderDetails" resultType="java.util.Map">
        select
        COUNT(*) totalCount
        from t_order_detail
        <where>
            <if test="detail.createTime != null ">
                datediff(create_time,#{detail.createTime})=0
            </if>
            <if test="detail.subject !=null">
               and subject=#{detail.subject}
            </if>
            <if test="detail.isActivity==1">
                and is_activity=1
            </if>
            <if test="detail.isActivity==0">
                and is_activity=0
            </if>
        </where>
    </select>
</mapper>